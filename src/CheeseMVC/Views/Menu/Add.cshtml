@{
    ViewBag.Title = "New Menu";
}
<form asp-controller="Menu" asp-action="Add" method="post">
    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" />
    </div>

    <input type="submit" value="Add Menu" />
</form>
